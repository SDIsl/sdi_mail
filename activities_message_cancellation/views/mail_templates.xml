<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail.message_activity_cancel">
<div>
    <p>
        <strong><span t-attf-class="fa #{activity.activity_type_id.icon}"/></strong> <span t-field="activity.activity_type_id.name"/> cancel
        by <span t-field="activity.user_id.name"/>:
        <span t-if="activity.summary" t-field="activity.summary"/>
    </p>
    <div t-if="activity.note" t-field="activity.note" style="margin-left: 8px;"/>
    <div t-if="activity.feedback" style="margin-top: 8px;">
        <strong> Feedback</strong>
    <div t-field="activity.feedback" style="margin-left: 8px;"></div>
    </div>
</div>
        </template>
    </data>
</odoo>
