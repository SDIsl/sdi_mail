<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-extend="mail.activity_items">
        <t t-jquery="div.o_thread_message_tools > a:last" t-operation="replace">
            <a href="#" class="btn btn-link btn-sm btn-danger text-muted o_activity_cancel o_activity_link" t-att-data-activity-id="activity.id">
                <i class="fa fa-times"/> Cancel
            </a>
        </t>
    </t>
    <t t-name="mail.activity_feedback_cancel_form">
        <div>
            <textarea class="form-control" rows="3" id="activity_feedback" placeholder="Write Feedback"/>
            <div class="mt8">
                <button type="button" class="btn btn-xs btn-primary o_activity_popover_cancel">
                    Cancel</button>
                <button type="button" class="btn btn-xs btn-link o_activity_popover_discard">
                    Discard</button>
            </div>
        </div>
    </t>

</templates>
